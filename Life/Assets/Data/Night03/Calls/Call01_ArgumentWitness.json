  "segments": [
    {
      "segmentId": "argument_intro",
      "callerLines": [
        "あの、すみません。",
        "今、道を歩いてたら、男女が口論してるのを見まして...",
        "ちょっと様子がおかしいんです。"
      ],
      "responses": [
        {
          "responseId": "argument_intro_details",
          "text": "どのような状況ですか？詳しく教えてください。",
          "nextSegmentId": "argument_describe",
          "setFlags": ["argument_reported"],
          "clearFlags": []
