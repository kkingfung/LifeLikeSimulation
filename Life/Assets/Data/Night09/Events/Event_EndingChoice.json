      "condition": {
        "requiresFlag": "operator_knows_misaki_with_yoshida"
      }
    },
    {
      "lineId": "mono_8",
      "content": "私は...どうすればいい？",
      "delaySeconds": 3
    },
    {
      "lineId": "mono_9",
      "content": "オペレーターとして、ただ電話を受けるだけでいいのか。",
      "delaySeconds": 3
    },
    {
      "lineId": "mono_10",
      "content": "それとも...",
      "delaySeconds": 2
    }
  ],
  "choices": [
    {
      "choiceId": "choice_tell_police",
      "text": "警察に全てを話す",
      "description": "山田刑事に、今夜知ったことを全て伝える。",
      "setFlags": ["operator_will_tell_police"],
      "clearFlags": [],
      "followUpMonologue": [
        {
          "lineId": "tell_1",
          "content": "...山田刑事に連絡しよう。",
          "delaySeconds": 2
        },
        {
          "lineId": "tell_2",
          "content": "今夜知ったこと、全部伝える。",
          "delaySeconds": 2
        },
        {
          "lineId": "tell_3",
          "content": "これ以上、誰かが死ぬのを見ていられない。",
          "delaySeconds": 3
        },
        {
          "lineId": "tell_4",
          "content": "たとえ私が危険になっても。",
          "delaySeconds": 2
        }
      ]
    },
    {
      "choiceId": "choice_stay_silent",
      "text": "沈黙を守る",
      "description": "オペレーターとしての立場を守り、何も言わない。",
      "setFlags": ["operator_will_stay_silent"],
      "clearFlags": [],
      "followUpMonologue": [
        {
          "lineId": "silent_1",
          "content": "...私はオペレーターだ。",
          "delaySeconds": 2
        },
        {
          "lineId": "silent_2",
          "content": "電話を受けて、必要な対応をする。それだけ。",
          "delaySeconds": 3
        },
        {
          "lineId": "silent_3",
          "content": "深入りすれば、私も危ない。",
          "delaySeconds": 2
        },
        {
          "lineId": "silent_4",
          "content": "...本当に、それでいいのか？",
          "delaySeconds": 3
        }
      ]
    }
